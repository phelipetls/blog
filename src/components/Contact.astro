---
import { useTranslate } from '@utils/i18n/useTranslate'
import { Mail, Linkedin, Github } from 'lucide-react'
import ContactLink from './ContactLink.astro'
import type { Locale } from '@utils/i18n/locales'

type Props = {
  locale: Locale
}

const t = useTranslate(Astro.props.locale)
---

<nav aria-label={t.Contacts} class='flex gap-2 mb-2'>
  <ContactLink
    id='contact-email'
    href='mailto:phelipe_teles@hotmail.com'
    aria-label='E-mail'
  >
    <Mail />
  </ContactLink>

  <ContactLink
    id='contact-linkedin'
    href='https://linkedin.com/in/phelipeteles'
    aria-label='LinkedIn'
  >
    <Linkedin />
  </ContactLink>

  <ContactLink
    id='contact-github'
    href='https://github.com/phelipetls'
    aria-label='GitHub'
  >
    <Github />
  </ContactLink>
</nav>
